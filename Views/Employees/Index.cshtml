@model List<CRUD.Models.Domain.Employee>;
@{
}
<h1> Employees </h1>
<table class="table"> 
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Date of Birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.Department</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy") </td>
                <td><a href="Employees/View/@employee.Id" class="btn btn-primary">View</a></td>
                <td><a href="Employees/Delete/@employee.Id" class="btn btn-primary btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
